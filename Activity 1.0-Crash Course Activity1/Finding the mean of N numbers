#include <stdio.h>
int main()
{
    int n, a[20], i, sum=0, ave;
    printf("Enter the limit:");
    scanf("%d", &n);
    
    for(i=1; i<=n; i++)
    {
        printf("Enter the number:");
        scanf("%d", &a[i]);
    }
    for(i=1; i<=n; i++)
    sum = sum + a[i];
    ave = sum/n;
    
    printf("Average = %d", ave);
    
    return 0;
}
